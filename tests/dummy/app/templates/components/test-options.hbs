<h2>
  Drag and drop with options
</h2>

<h3>
  Copy items
</h3>

<EmberDragula
  @options={{hash copy=true}}
  @onDrop={{this.dropped}}
  @onDrag={{this.dragged}} as |d|
>
  <EmberDragulaContainer class="list list-copy-1">
    {{#each this.listOne as |item|}}
      <div class="item">
        {{item.name}}
      </div>
    {{/each}}
  </EmberDragulaContainer>

  <EmberDragulaContainer class="list list-copy-2">
    {{#each this.listTwo as |item|}}
      <div class="item">
        {{item.name}}
      </div>
    {{/each}}
  </EmberDragulaContainer>
</EmberDragula>

<h3>
  Move disabled
</h3>

<EmberDragula
  @options={{hash moves=this.moves}}
  @onDrop={{this.dropped}}
  @onDrag={{this.dragged}} as |d|
>
  <EmberDragulaContainer class="list list-moves-1">
    {{#each this.listOne as |item|}}
      <div class="item">
        {{item.name}}
      </div>
    {{/each}}
  </EmberDragulaContainer>

  <EmberDragulaContainer class="list list-moves-2">
    {{#each this.listTwo as |item|}}
      <div class="item">
        {{item.name}}
      </div>
    {{/each}}
  </EmberDragulaContainer>
</EmberDragula>